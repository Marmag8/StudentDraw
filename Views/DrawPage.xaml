<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudentDraw.Views.DrawPage">

    <ScrollView>
        <VerticalStackLayout>
            <Picker
                x:Name="ClassPicker"
                Title="Wybierz klasę"
                WidthRequest="200" />
            <Button
                x:Name="DrawButton"
                Text="Losuj ucznia"
                WidthRequest="200"
                Clicked="Draw" />
            <Label
                x:Name="Result"
                FontAttributes="Bold"
                FontSize="32"
                HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
