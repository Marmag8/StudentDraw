<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudentDraw.Views.DrawPage">

    <ContentPage.Resources>
        <StyleSheet Source="/Resources/Styles/styles.css" />
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout StyleClass="draw-container">
            <Picker
                x:Name="ClassPicker"
                Title="Wybierz klasę" />
            <Button
                x:Name="DrawButton"
                Text="Losuj ucznia"
                StyleClass="big-button"
                Clicked="Draw" />
            <Label
                x:Name="Result"
                StyleClass="result-label" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
