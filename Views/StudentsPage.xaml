<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudentDraw.Views.StudentsPage"
             Title="Uczniowie">

    <ContentPage.Resources>
        <StyleSheet Source="/Resources/Styles/styles.css" />
    </ContentPage.Resources>

    <VerticalStackLayout Padding="12" Spacing="12">

        <Button Text="Dodaj klasę"
                Clicked="AddClass"
                HorizontalOptions="Start" />

        <CollectionView ItemsSource="{Binding GroupedStudents}"
                        IsGrouped="True">
            <CollectionView.GroupHeaderTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="Auto, Auto, Auto"
                          Padding="0,12,0,4"
                          Margin="0, 12">
                        <Label Grid.Column="0"
                               Text="{Binding ClassSymbol}"
                               StyleClass="group-header-label"
                               Padding="12, 0"
                               VerticalOptions="Center" />

                        <Button Grid.Column="1"
                                Text="+"
                                StyleClass="add-student-btn"
                                Clicked="AddStudentToClass"
                                CommandParameter="{Binding ClassSymbol}"
                                VerticalOptions="Center"
                                HorizontalOptions="Start" />
                        <Button Grid.Column="2"
                                Text="Usuń klasę"
                                StyleClass="delete-class-btn"
                                Clicked="DeleteClass"
                                CommandParameter="{Binding ClassSymbol}"
                                VerticalOptions="Center"
                                HorizontalOptions="Start" />
                    </Grid>
                </DataTemplate>
            </CollectionView.GroupHeaderTemplate>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="*, Auto, Auto"
                          Padding="12, 2">
                        <Label Grid.Column="0"
                               Text="{Binding DisplayName}"
                               StyleClass="student-name-label"
                               Margin="12,2"
                               VerticalOptions="Center" />
                        <HorizontalStackLayout Grid.Column="1" VerticalOptions="Center">
                            <CheckBox IsChecked="{Binding IsPresent}"
                                      CheckedChanged="OnIsPresentChanged" />
                                                    <Label Text="obecny"
                                                           VerticalOptions="Center"
                                                           FontSize="14" />
                        </HorizontalStackLayout>
                        <Button Grid.Column="2"
                                Text="Usuń"
                                StyleClass="delete-student-btn"
                                Clicked="DeleteStudent"
                                CommandParameter="{Binding}"
                                VerticalOptions="Center"
                                HorizontalOptions="End" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>

</ContentPage>