<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="StudentDraw.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:StudentDraw.Views"
    Title="Losowanie Ucznia"
    FlyoutBehavior="Flyout">

    <FlyoutItem Title="Losowanie" Route="draw">
        <ShellContent
            Title="Losuj ucznia"
            ContentTemplate="{DataTemplate views:DrawPage}"
            Route="DrawPage" />
    </FlyoutItem>

    <FlyoutItem Title="Lista Uczniow" Route="students">
        <ShellContent
            Title="Lista Uczniow"
            ContentTemplate="{DataTemplate views:StudentsPage}"
            Route="StudentsPage" />
    </FlyoutItem>

</Shell>
